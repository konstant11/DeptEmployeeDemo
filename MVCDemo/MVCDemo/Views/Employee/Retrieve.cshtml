@model MVCDemo.Model.CreateModel

@{
    ViewData["Title"] = "Employee Details";
    ViewData["Main-Header"] = "Information about " + Model.Employee.FirstName + " " + Model.Employee.LastName; ;
    ViewData["Header-details"] = "employee data";
}
<body>
    <table>
        <tr>
            <td>
                <div class="present-person">
                    <h1>@Model.Employee.FirstName  @Model.Employee.LastName</h1>
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="lable-person">
                    <h3>Email Address:</h3>
                </div>

            </td>
            <td>
                <div class="present-person">
                    <h1>@Model.Employee.Email</h1>
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="lable-person">
                    <h3>PhoneNumber:</h3>
                </div>

            </td>
            <td>
                <div class="present-person">
                    <h1>@Model.Employee.Phone</h1>
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="lable-person">
                    <h3>Department:</h3>
                </div>

            </td>
            <td>
                <div class="present-person">
                    <h1>@Model.DepartmentName</h1>
                </div>
            </td>
        </tr>
    </table>
</body>